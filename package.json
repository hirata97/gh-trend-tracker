{
  "name": "gh-trend-tracker",
  "version": "0.1.0",
  "private": true,
  "description": "GitHub Trends Tracker - Visualize GitHub repository trends with quantitative metrics",
  "workspaces": [
    "apps/*",
    "shared"
  ],
  "scripts": {
    "dev:api": "npm run dev -w apps/api",
    "dev:web": "npm run dev -w apps/web",
    "build:api": "npm run build -w apps/api",
    "build:web": "npm run build -w apps/web",
    "build": "npm run build --workspaces --if-present",
    "deploy:api": "npm run deploy -w apps/api",
    "deploy:web": "npm run deploy -w apps/web",
    "test:api": "npm run test -w apps/api",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present"
  },
  "keywords": [
    "github",
    "trends",
    "analytics",
    "cloudflare",
    "astro",
    "hono"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  }
}
