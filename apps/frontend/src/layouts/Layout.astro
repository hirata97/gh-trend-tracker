---
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';
import GlobalHeader from '../components/GlobalHeader';

interface Props {
  title: string;
  snapshotDate?: string;
}

const { title, snapshotDate } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="GitHub Trends Tracker - Visualize trending repositories" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <GlobalHeader snapshotDate={snapshotDate} />
    <slot />
  </body>
</html>
